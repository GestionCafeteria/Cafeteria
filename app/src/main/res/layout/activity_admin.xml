<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/gradient_background" >

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:icon="@mipmap/drinks"
        android:text="Opciones"
        app:backgroundTint="@color/colorNaranjita"
        app:rippleColor="@color/black" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fab_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/fab_main"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone">

        <!-- Botón Opción 1 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/pencil"
            app:backgroundTint="@color/colorNaranjita"
            app:rippleColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Etiqueta para Botón Opción 1 -->
        <TextView
            android:id="@+id/label_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Contraseña"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/fab_option1"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/background_color_aqua"
            android:layout_marginTop="4dp" />

        <!-- Botón Opción 2 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/exit"
            app:backgroundTint="@color/colorNaranjita"
            app:rippleColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/label_option1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Etiqueta para Botón Opción 2 -->
        <TextView
            android:id="@+id/label_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/fab_option2"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/background_color_aqua"
            android:layout_marginTop="4dp" />

        <!-- Agregar más botones flotantes y etiquetas según tus necesidades -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:text=""
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_below="@id/fab_options"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:text="Ingresa los datos de empleado"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_below="@id/txt_principal"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="16sp"
        android:layout_below="@id/bienvenida" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="16sp"
        android:layout_below="@id/et_nombre" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textSize="16sp"
        android:layout_below="@id/et_username" />

    <Spinner
        android:id="@+id/spinnerRol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/et_password" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_below="@id/spinnerRol" />

</RelativeLayout>
